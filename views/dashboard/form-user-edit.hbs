<body class="bodyaddformation">

<div class="user-form-ok content-container">
<h1 class="title">Edit user role(<span title="{{user._id}}">{{user.username}}</span>)</h1>

<form method="post" action="/users/user-edit/{{user._id}}" class="form">
    <h2 class="title">Choose a role</h2>
    <div class="flex row">

        <label for="radio-user" class="is-clickable">user</label>
        <input id="radio-user" name="role" value="user" type="radio" {{setCheckedbox "user" user.role }}>

        <label for="radio-admin" class="is-clickable">admin</label>
        <input id="radio-admin" name="role" value="admin" type="radio" {{setCheckedbox "admin" user.role }}>

    </div>
    <button class="btn-user-ok">ok</button>
</form>
</div>

</body>