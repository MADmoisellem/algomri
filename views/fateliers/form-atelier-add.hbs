<body class="bodyaddformation">
  <h2 class="hacheformation">Ajouter un atelier</h2>
  <hr>
  <section class="formation-container">

    <section class="all-description">
      <form action="/ateliers/atelier-add" method="post" class="add-product-form" enctype="multipart/form-data">


        <div class="formation-item">
          <label for="form-title" class="label-name label">title</label>
          <input id="form-title" type="text" class="form-title form-input line" placeholder="Intitulé de la formation"
            name="title" value="Initiez-vous à la photographie">
        </div>

        <div class="formation-item">
          <label for="form-mini-descr" class="label-descr label">description</label>
          <input id="form-mini-descr" type="text" class="form-mini-descr form-input line"
            placeholder="Description courte" name="description" value="une formation de 10h au coeur de Paris">
        </div>

        <div class="formation-item">
          <label for="form-img" class="label-price label">Image</label>
          <input id="form-img" type="file" class="form-img" name="avatar">
        </div>

        <div class="formation-item">
          <label for="form-date" class="label-descr label">date</label>
          <input id="form-date" type="datetime-local" class="form-mini-descr form-input line" placeholder="ex: 12/09/2020"
            name="date">
        </div>

        <div class="formation-item">
          <label for="form-ville" class="label-descr label">ville</label>
          <input id="form-ville" type="text" class="form-mini-descr form-input line" placeholder="ex: bagnolet"
            name="ville" value="Paris">
        </div>

        <div class="formation-item">
          <label for="form-code" class="label-descr label">code postale</label>
          <input id="form-code" type="number" class="form-mini-descr form-input line" placeholder="ex:93170"
            name="code_postale" value="75020">
        </div>
        <div class="formation-item">
          <label for="form-numero" class="label-descr label">numero</label>
          <input id="form-numero" type="number" class="form-mini-descr form-input line" placeholder="ex:70"
            name="numero" value="12">
        </div>
        <div class="formation-item">
          <label for="form-rue" class="label-descr label">rue</label>
          <input id="form-rue" type="text" class="form-mini-descr form-input line" placeholder="ex:rue la belle ville"
            name="rue" value="Avenue Gambetta">
        </div>

        <div class="form-item-wrapper flexed-item">
          <label for="category" class="label-main-cat label">Categorie</label>
          <select id="category" class="select" required name="category">
            {{#each categories}}
            <option value="{{this._id}}"> {{this.label}}</option>
            {{/each}}
          </select>
        </div>
    </section>

    <div class="form-item-wrapper flexed-item">
      <label for="language" class="label-main-cat label">Langue</label>
      <select id="language" class="select" required name="languages">
        {{#each languages}}
        <option value="{{this._id}}">{{this.lang}}</option>
        {{/each}}
      </select>
    </div>
