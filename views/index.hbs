{{! SECTION ARTICLES}}
<section class="section-articles">
  <div class="articles-container">
    <h2> RECENT POSTS </h2>
    <h3>Latest news and updates</h3>
    <section class="articles-wrapper">
      {{#each articles}}
      <article class="article-elements">
        <hgroup>
          <h3 class="article-date">{{#formatSmallDate this.date}} {{/formatSmallDate}}</h3>
          <h3 class="article-title">{{this.title}}</h3>
        </hgroup>
        <p class="article-description">{{this.description}}</p>
        <hr>
        <div class="article-footer">
          <p>{{this.author}}</p>
          <a href="/articles/one-article/{{this._id}}">lire la suite<i class="fas fa-long-arrow-alt-right"></i></a>
        </div>
      </article>
      {{/each}}
    </section>
    {{! end of articles}}

